<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <!-- Toolbar Style -->
    <style name="ToolbarTextAppearance">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_size_toolbar</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/ToolbarTextAppearance</item>
    </style>

    <!-- Main Section Title Text Appearance -->
    <style name="MainSectionTitleTextAppearance">
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:text">Trending</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_main_section_title</item>
    </style>


    <!-- Main Button More -->
    <style name="MainButtonMore" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="icon">@drawable/main_icon_more</item>
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconTint">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconPadding">@dimen/icon_padding_main_button_more</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_main_button_more</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginEnd">@dimen/margin_end_main_button_more</item>
    </style>
</resources>
